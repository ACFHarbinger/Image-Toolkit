{
    "manifest_version": 3,
    "name": "Save Image to Folder",
    "version": "1.0",
    "description": "Adds a context menu to save images into a specific sub-folder in Downloads.",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "contextMenus",
        "downloads",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png"
        },
        "default_title": "Set Save Directory",
        "default_popup": "options.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}